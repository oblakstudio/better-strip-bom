{
    "name": "serbian-validators",
    "version": "1.0.0",
    "license": "GPL-3.0",
    "private": false,
    "publishConfig": {
      "access": "public"
    },
    "contributors": [
      {
        "name": "Sibin Grasic",
        "email": "sibin.grasic@oblak.studio",
        "url": "https://oblak.studio"
      }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/oblakstudio/serbian-validators.git"
    },
    "bugs": "https://github.com/oblakstudio/serbian-validators/issues",
    "keywords": [],
    "scripts": {
      "build": "rimraf dist && tsc",
      "watch": "rimraf dist && tsc --watch",
      "build:production": "rimraf dist && tsc --project tsconfig.build.json",
      "lint": "eslint lib/*.ts",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "release:test": "node ./node_modules/semantic-release/bin/semantic-release.js --dry-run",
      "release": "node ./node_modules/semantic-release/bin/semantic-release.js"
    },
    "engines": {
      "node": ">= 14"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "devDependencies": {
      "@semantic-release/changelog": "^6.0.3",
      "@semantic-release/exec": "^6.0.3",
      "@semantic-release/git": "^10.0.1",
      "@semantic-release/github": "^8.0.7",
      "@semantic-release/npm": "^10.0.3",
      "@types/jest": "^29.5.0",
      "@typescript-eslint/eslint-plugin": "^5.57.1",
      "@typescript-eslint/parser": "^5.57.1",
      "eslint": "^8.38.0",
      "eslint-config-prettier": "^8.8.0",
      "eslint-plugin-prettier": "^4.2.1",
      "jest": "^29.5.0",
      "prettier": "^2.8.7",
      "rimraf": "^4.4.1",
      "semantic-release": "^21.0.1",
      "ts-jest": "^29.1.0",
      "typescript": "^5.0.4"
    },
    "jest": {
      "moduleFileExtensions": [
        "js",
        "json",
        "ts"
      ],
      "rootDir": "lib",
      "testRegex": ".*\\.spec\\.ts$",
      "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
        "**/*.(t|j)s"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
    }
  }
